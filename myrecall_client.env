# MyRecall Client Configuration (v3)
# Run with: ./run_client.sh

# ==============================================================================
# REQUIRED: Role Configuration (v3)
# ==============================================================================
OPENRECALL_ROLE=client

# ==============================================================================
# Connection Settings
# ==============================================================================
OPENRECALL_API_URL=http://localhost:18083/api
OPENRECALL_UPLOAD_TIMEOUT=180

# ==============================================================================
# Data Directory Settings
# ==============================================================================
OPENRECALL_SERVER_DATA_DIR=~/MRS
OPENRECALL_CLIENT_DATA_DIR=~/MRC

# ==============================================================================
# Capture Settings
# ==============================================================================
OPENRECALL_CAPTURE_INTERVAL=20
OPENRECALL_PRIMARY_MONITOR_ONLY=true
OPENRECALL_DISABLE_SIMILARITY_FILTER=false
OPENRECALL_SIMILARITY_THRESHOLD=0.9

# ==============================================================================
# Debug & Storage
# ==============================================================================
OPENRECALL_DEBUG=true
OPENRECALL_CLIENT_SAVE_LOCAL_SCREENSHOTS=false
